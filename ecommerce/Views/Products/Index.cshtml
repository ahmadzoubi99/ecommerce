@model IEnumerable<ecommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "AdminLayout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Products</h6>
                <div class="d-flex mb-3 justify-content-between align-items-center">
                    <form asp-action="SearchByProducttName" method="post" class="d-flex align-items-center">
                        <input type="text" name="name" class="form-control me-2" placeholder="Search by name" />
                        <button type="submit" class="btn btn-primary">Search</button>
                    </form>
                    <a asp-action="Create" class="btn btn-success ms-2">Create New</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Price)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Image)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.DiscountValue)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Stock)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Category)</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td><img src="@Url.Content("~/images/" + item.Image)" alt="Product Image" style="width:150px;" /></td>
                                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                    <td>@Html.DisplayFor(modelItem => item.DiscountValue)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Category.Name)</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>