@model ecommerce.Models.User
@{
    Layout = "HomeLayout";
}
<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5">
              
                    <img class="rounded-circle mt-5" width="150" src="@Url.Content("~/images/" + Model.ImagePath)">
                    <div class="form-group" hidden>
                        <label asp-for="ImagePath" class="control-label"></label>
                        <input asp-for="ImagePath" class="form-control" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>

                
            </div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right"style="font-weight:bold;">Profile Settings</h4>
                </div>

                <form asp-action="Edit" asp-controller="UserProfile" method="post" enctype="multipart/form-data">
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label asp-for="FullName" class="labels">Full Name</label>
                            <input asp-for="FullName" type="text" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="phoneNumber" class="labels">Mobile Number</label>
                            <input asp-for="phoneNumber" type="text" class="form-control" placeholder="Enter phone number" />
                            <span asp-validation-for="phoneNumber" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Location" class="labels">Address</label>
                            <input asp-for="Location" type="text" class="form-control" placeholder="Enter address line 1" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Email" class="labels">Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email id" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Birthday" class="control-label">Birthday</label>
                            <input asp-for="Birthday" type="date" class="form-control" />
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>
                        <div class="col-md-12" hidden>
                            <label asp-for="ImagePath" class="labels">Profile Picture</label>
                            <input asp-for="ImagePath" type="file" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="ImageFile" class="labels">Profile Picture</label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                       
                        <div class="col-md-12">
                            <label class="labels">New Password</label>
                            <input type="password" name="newPassword" class="form-control" placeholder="Enter new password" />
                            <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <button class="btn btn-primary profile-button" type="submit">Save Profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
