@model ecommerce.Models.User



<div>
    <h4>User Profile</h4>
    <dl class="row">
        <dt class="col-sm-2">Username</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Full Name</dt>
        <dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Birthday</dt>
        <dd class="col-sm-10">@Model.Birthday?.ToString("d")</dd>
        <dt class="col-sm-2">Profile Image</dt>
        <dd class="col-sm-10"><img src="@Model.ImagePath" alt="Profile Image" /></dd>
    </dl>
</div>

<a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
