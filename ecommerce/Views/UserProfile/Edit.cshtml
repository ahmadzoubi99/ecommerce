@model ecommerce.Models.User

<h2>Edit Profile</h2>

<form asp-action="Edit" asp-controller="UserProfile" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Birthday"></label>
        <input asp-for="Birthday" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="ImagePath"></label>
        <input asp-for="ImagePath" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
