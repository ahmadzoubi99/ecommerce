@model ecommerce.Models.User

@{
    ViewData["Title"] = "Edit";
    Layout = "AdminLayout";
}

<style>
    .custom-input,
    .custom-select {
        border: 1px solid #ced4da; /* Same border color */
        border-radius: 0.375rem; /* Same border-radius */
        padding: 0.375rem 0.75rem; /* Same padding */
    }

    .custom-input {
        background-color: #ffffff; /* Background color similar to dropdown */
    }

    .custom-select {
        background-color: #ffffff; /* Background color for dropdown */
    }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Edit User</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group mb-3">
                            <label asp-for="FullName" class="form-label" style="color:black"></label>
                            <input asp-for="FullName" class="form-control custom-input" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label" style="color:black"></label>
                            <input asp-for="Email" class="form-control custom-input" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3" hidden>
                            <label asp-for="ImagePath" class="form-label" style="color:black"></label>
                            <input asp-for="ImagePath" class="form-control custom-input" />
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3" >
                            <label asp-for="ImageFile" class="form-label" style="color:black"></label>
                            <input asp-for="ImageFile" class="form-control custom-input" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="RoleId" class="form-label" style="color:black"></label>
                            <select asp-for="RoleId" class="form-control custom-select" asp-items="ViewBag.RoleId"></select>
                            <span asp-validation-for="RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Birthday" class="form-label" style="color:black"></label>
                            <input asp-for="Birthday" type="date" class="form-control custom-input" />
                            <span asp-validation-for="Birthday" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-3">
        <div class="col-md-8 col-lg-6">
            <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
        </div>
    </div>
</div>
