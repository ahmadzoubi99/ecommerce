@model IEnumerable<ecommerce.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">User Table</h6>

                <form asp-action="SearchByUsertName" method="post" class="form-inline mb-3">
                    <input type="text" name="name" class="form-control mr-2" placeholder="Search by name" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                <br />
                <a asp-action="Create">Create New</a>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Username</th>
                                <th scope="col">Password Hash</th>
                                <th scope="col">Email</th>
                                <th scope="col">Full Name</th>
                                <th scope="col">Image</th>
                                <th scope="col">Role</th>
                                <th scope="col">Birthday</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@(item.Username ?? "N/A")</td>
                                    <td>@(item.PasswordHash ?? "N/A")</td>
                                    <td>@(item.Email ?? "N/A")</td>
                                    <td>@(item.FullName ?? "N/A")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImagePath))
                                        {
                                            <img src="@Url.Content("~/Images/" + item.ImagePath)" asp-append-version="true" width="100" height="100" />
                                        }
                                        else
                                        {
                                            <span>No photo</span>
                                        }
                                    </td>
                                    <td>@(item.Role?.Id.ToString() ?? "N/A")</td>
                                    <td>@(item.Birthday?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
