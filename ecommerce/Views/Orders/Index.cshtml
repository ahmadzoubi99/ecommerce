@model IEnumerable<ecommerce.Models.Order>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}
<div style="padding-left:30px;padding-top:25px">

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Order Table</h6>
                    <div class="d-flex mb-3">
                        <div class="flex-grow-1 mr-2" style="flex-basis: 75%;">
                            <form asp-action="SearchByName" method="post" class="d-flex align-items-center">
                                <input type="text" name="name" class="form-control" placeholder="Search by user" style="margin-right: 2%;" />
                                <button type="submit" class="btn btn-primary" style="width: 20%;">Search</button>
                            </form>
                        </div>
                        <div style="flex-basis: 15%;">
                            <a asp-action="Create" class="btn btn-success w-100" style="margin-left: 2%;">Create New</a>
                        </div>
                    </div>


@*                 <a asp-action="Create">Create New</a>
 *@
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">User</th>
                                <th scope="col">Total Amount</th>
                                <th scope="col">Created At</th>
                                <th scope="col">Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.Id</th>
                                    <td>@(item.User?.Id.ToString() ?? "N/A")</td>
                                    <td>@(item.TotalAmount.ToString("C") ?? "N/A")</td> <!-- Assuming TotalAmount is a decimal -->
                                    <td>@(item.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss") ?? "N/A")</td>
                                    <td>@(item.Status ?? "N/A")</td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
