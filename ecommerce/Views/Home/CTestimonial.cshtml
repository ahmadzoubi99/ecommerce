@model ecommerce.Models.Testimonial

@{
    Layout = "HomeLayout";
}
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Testimonial</h1>
                    <p class="mb-4">We value your feedback and would love to hear about your experience with our furniture. Your testimonials help us understand what we're doing right and where we can improve. Share your thoughts and inspire others to make their homes beautiful with our unique furniture pieces!.</p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="~/HomeAssets/images/couch.png" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>

<div style="padding-left:30px;padding-top:25px  ; " >
   
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="CTestimonial">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="10"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary-hover-outline" style="margin-bottom:15%">Send Message</button>
                </div>
            </form>
        </div>
    </div>

   
</div>

