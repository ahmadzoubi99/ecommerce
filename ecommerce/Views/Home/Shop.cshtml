@{
    @model Tuple<IEnumerable<Category>, IEnumerable<Product>>;
    Layout = "HomeLayout";
}
<link href="~/css/shop.css" rel="stylesheet" />

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop</h1>
                </div>
            </div>
            <div class="col-lg-7">
                <!-- Optional image or content can go here -->
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="container section-title" data-aos="fade-up">
    <h2 class="text-center">Our Product</h2>
</div>

<div class="container">
    <ul class="nav nav-tabs d-flex justify-content-center" id="productTabs" role="tablist" data-aos="fade-up" data-aos-delay="100">
        <li class="nav-item" role="presentation">
            <a class="nav-link active" id="starters-tab" data-bs-toggle="tab" href="#menu-starters" role="tab" aria-controls="menu-starters" aria-selected="true">
                <h4>All</h4>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="breakfast-tab" data-bs-toggle="tab" href="#menu-breakfast" role="tab" aria-controls="menu-breakfast" aria-selected="false">
                <h4>Chair</h4>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="lunch-tab" data-bs-toggle="tab" href="#menu-lunch" role="tab" aria-controls="menu-lunch" aria-selected="false">
                <h4>Table</h4>
            </a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="dinner-tab" data-bs-toggle="tab" href="#menu-dinner" role="tab" aria-controls="menu-dinner" aria-selected="false">
                <h4>Room</h4>
            </a>
        </li>
    </ul>

    <div class="tab-content" id="productTabsContent" data-aos="fade-up" data-aos-delay="200">
        <!-- Starters Tab -->
        <div class="tab-pane fade show active" id="menu-starters" role="tabpanel" aria-labelledby="starters-tab">
            <div class="tab-header text-center">
                <p>Menu</p>
                <h3>Starters</h3>
            </div>
            <div class="row gy-5">
                @foreach (var item in Model.Item2.Where(p => p.Category.Name == "Starters"))
                {
                    <div class="col-md-4 menu-item">
                        <img src="@item.ImageFile" alt="@item.Name" class="img-fluid">
                        <h4>@item.Name</h4>
                        <p>@item.Description</p>
                    </div>
                }
            </div>
        </div>

        <!-- Breakfast Tab -->
        <div class="tab-pane fade" id="menu-breakfast" role="tabpanel" aria-labelledby="breakfast-tab">
            <div class="tab-header text-center">
                <p>Menu</p>
                <h3>Breakfast</h3>
            </div>
            <div class="row gy-5">
                @foreach (var item in Model.Item2.Where(p => p.Category.Name == "Breakfast"))
                {
                    <div class="col-md-4 menu-item">
                        <img src="@item.ImageFile" alt="@item.Name" class="img-fluid">
                        <h4>@item.Name</h4>
                        <p>@item.Description</p>
                    </div>
                }
            </div>
        </div>

        <!-- Lunch Tab -->
        <div class="tab-pane fade" id="menu-lunch" role="tabpanel" aria-labelledby="lunch-tab">
            <div class="tab-header text-center">
                <p>Menu</p>
                <h3>Lunch</h3>
            </div>
            <div class="row gy-5">
                @foreach (var item in Model.Item2.Where(p => p.Category.Name == "Lunch"))
                {
                    <div class="col-md-4 menu-item">
                        <img src="@item.ImageFile" alt="@item.Name" class="img-fluid">
                        <h4>@item.Name</h4>
                        <p>@item.Description</p>
                    </div>
                }
            </div>
        </div>

        <!-- Dinner Tab -->
        <div class="tab-pane fade" id="menu-dinner" role="tabpanel" aria-labelledby="dinner-tab">
            <div class="tab-header text-center">
                <p>Menu</p>
                <h3>Dinner</h3>
            </div>
            <div class="row gy-5">
                @foreach (var item in Model.Item2.Where(p => p.Category.Name == "Dinner"))
                {
                    <div class="col-md-4 menu-item">
                        <img src="@item.ImageFile" alt="@item.Name" class="img-fluid">
                        <h4>@item.Name</h4>
                        <p>@item.Description</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/shop.js"></script>
