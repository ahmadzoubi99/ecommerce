@{
    @model Tuple<IEnumerable<Category>, IEnumerable<Product>>;
    Layout = "HomeLayout";
}
<link href="~/css/shop.css" rel="stylesheet" />

 <style>
    .before-footer-section {
        padding: 0rem 0 12rem 0 !important;
    }

 </style>
 <link href="~/HomeAssets/css/style.css" />

<!-- Start Hero Section -->
<div class="hero" id="ShopID">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt" ">
                   
                    <h1 id="ShopHeader">Shop</h1>
                    <p id="ShopPara">Discover our exclusive collection of high-quality.</p>
                </div>
            </div>
            <div class="col-lg-7">
                <!-- Optional image or content can go here -->
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<div class="container section-title" data-aos="fade-up">
    <h2 class="text-center">Our Product</h2>
</div>

<div class="container">
    <ul class="nav nav-tabs d-flex justify-content-center" id="productTabs" role="tablist" data-aos="fade-up" data-aos-delay="100">
        <li class="nav-item" role="presentation">
            <form asp-controller="Home" asp-action="AllProduct" method="post">
                <button class="nav-link active" id="starters-tab" data-bs-toggle="tab" href="#menu-starters" role="tab" aria-controls="menu-starters" aria-selected="true">
                    <h4>All</h4>
                </button>
            </form>
        </li>

@foreach (var item in Model.Item1)
{
    <li class="nav-item" role="presentation">
        <form asp-controller="Home" asp-action="ProductByCategorie" asp-route-id="@item.Id" method="post">
            <button type="submit" class="nav-link" role="tab" aria-controls="menu-breakfast" aria-selected="false">
                <h4>@item.Name</h4>
            </button>
        </form>
    </li>
}

    </ul>

</div>

<br />
<br />

<div class="untree_co-section product-section before-footer-section">
    <div class="container">
        <div class="row">
            <!-- Start Column 4 -->
            @foreach (var item in Model.Item2)
            {
                <div class="col-12 col-md-4 col-lg-3 mb-5">
                    <a class="product-item" asp-action="productsIndetails" asp-controller="Home" asp-route-id="@item.Id">
                        
                            <img src="@Url.Content("~/images/" + item.Image)" class="img-fluid product-thumbnail" alt="Product Image">
                        
                        <h3 class="product-title">@item.Name</h3>
                       
                        @if (item.DiscountValue > 0)
                        {
                            <p>
                                <del class="old-price">$@item.Price</del>
                                <strong class="discount-percentage">(@item.DiscountValue% OFF)</strong>
                            </p>
                            <strong class="product-price">$@(item.Price - (item.Price * item.DiscountValue / 100))</strong>
                        }
                        else
                        {
                            <strong class="product-price">$@item.Price</strong>
                        }
                        <span class="icon-cross">
                            <form method="post" asp-action="AddToCart" asp-controller="Cart">
                                <input type="hidden" name="ProductId" value="@item.Id" />
                                <input type="hidden" name="Quantity" value="1" />
                                <button type="submit">
                                    <img src="~/HomeAssets/images/cross.svg" class="img-fluid" alt="Add to Cart">
                                </button>
                            </form>
                        </span>
                    </a>
                </div>
            }


        </div>
    </div>
</div>
<script src="~/js/shop.js"></script>
